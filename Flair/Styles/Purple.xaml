<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- old: #FFb400ff -->
    <Color x:Key="HighlightDarkColor">#FF68217a</Color>
    <Color x:Key="HighlightLightColor">#FF68217a</Color>

    <Color x:Key="AccentColor">#0068217a</Color>
    <!--60%-->
    <Color x:Key="AccentColor2">#9968217a</Color>
    <!--40%-->
    <Color x:Key="AccentColor3">#6668217a</Color>
    <!--20%-->
    <Color x:Key="AccentColor4">#3368217a</Color>

    <LinearGradientBrush x:Key="BrandingBrush" EndPoint="0.001,0.5" StartPoint="1.002,0.5">
        <GradientStop Color="{DynamicResource HighlightDarkColor}" Offset="0"/>
        <GradientStop Color="#FFFFB519" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="AccentColorBrush" Color="{DynamicResource AccentColor}" />

</ResourceDictionary>